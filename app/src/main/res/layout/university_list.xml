<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="80dp">

    <ImageView
        android:id="@+id/universityLogo"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@mipmap/apacks_logo"
        android:padding="10dp"/>
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="88dp"
      android:layout_alignParentTop="true"
      android:layout_alignParentRight="true"
      android:layout_alignParentBottom="true"
      android:layout_toRightOf="@id/universityLogo"
      android:orientation="vertical"
      android:paddingLeft="16dp">

      <TextView
          android:id="@+id/universityName_textView"
          android:layout_width="match_parent"
          android:layout_height="0dp"
          android:layout_weight="1"
          android:gravity="bottom"
          android:text="University Name"
          android:textAppearance="?android:textAppearanceMedium"
          android:textSize="18sp"
          android:textStyle="bold"
          app:fontFamily="@font/yeseva_one" />

      <TextView
          android:id="@+id/website_textView"
          android:layout_width="match_parent"
          android:layout_height="0dp"
          android:layout_weight="1"
          android:gravity="top"
          android:text="www.university.co.za"
          android:textColor="@color/design_default_color_primary"
          android:textSize="16sp" />
  </LinearLayout>


</RelativeLayout>